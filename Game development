/*write a game development program that implements the Bubble Sort algorithm. The
program will simulate a simple game where the player can input a set of numbers,
and the numbers will be sorted using Bubble Sort to simulate a "level-up" scenario
where the player's scores are sorted in ascending order.*/

#include<iostream>
using namespace std;


void bubble_sort(int score[] , int n) {
    for(int i= n-1; i>=0; i--) {
        for(int j= 0; j<=i-1; j++) {
            if(score[j]>score[j+1]) {
                int temp = score[j+1];
                score[j+1]= score[j];
                score[j] = temp;
               
            }
        }
    }
   
}
int main() {
    int n;
    cout<<"Enter the number of scores"<<" ";
    cin>>n;
    int score[n];
    cout<<"Enter the scores"<<" "<<endl;
    for(int i=0; i<n; i++) {
        cin>>score[i];
    }
    bubble_sort(score , n);
    cout<<"Level Up"<<endl;
    for(int i=0; i<n; i++) {
        cout<<score[i]<<" ";
    }


cout<<endl;
return 0;


}
